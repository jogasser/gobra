decreases x if 1 <= x
decreases _ if x <= -1
decreases *
func sign2(x int) int {
  if x == 0 {
    return sign2(x)
  } else {
    if 1 < x {
    
      //:: ExpectedOutput(method_termination_error)
      return sign2(x)
    } else { 
      if x < -1 {
        return sign2(x + 1)
      } else {
        return x
      }
    }
  }
}

